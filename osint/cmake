cmake_minimum_required(VERSION 3.10)
project(osint_tool)

find_package(CURL REQUIRED)

add_executable(osint_tool
    main.cpp
    core/core.cpp
    Tool/tool.cpp
    config/api_config.cpp
    api/api_client.cpp
)

target_include_directories(osint_tool PRIVATE ${CURL_INCLUDE_DIRS})
target_link_libraries(osint_tool PRIVATE ${CURL_LIBRARIES})